<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>{{ title }}</title>
    </head>
    <body>
        <h1>{{ title }}</h1>
            {%- for filename in images %}
                {%- capture path %}assets/{{ filename }}{% endcapture %}
                <img src="assets/{{ filename | url_encode }}">{{ path | filesize }}
            {%- endfor %}
    </html>